    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            // Registra Drive
            //Class.forName ("com.mysql.jdbc.Driver");
            
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection conn = DriverManager.getConnection("jdbc:mysql://localhost/db_escola", "root", "");
            java.sql.Statement st = conn.createStatement();
            st.executeUpdate("INSERT INTO aluno (id,nome,cpf) VALUES ("
                    +this.jTextPane1_ID.getText()+","
                    +this.jTextPane1_NOME.getText()+","
                    +this.jTextPane1_CPF.getText()+")");
            JOptionPane.showMessageDialog(rootPane, "Aluno Inserido");
            
            //} catch  (SQLException | ClassNotFoundException e){
            
            
            
            // TODO add your handling code here:
        } catch (ClassNotFoundException ex) {
            Logger.getLogger(Tela_Inicial.class.getName()).log(Level.SEVERE, null, ex);
        } catch (SQLException ex) {
            Logger.getLogger(Tela_Inicial.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            Connection conn = DriverManager.getConnection("jdbc:mysql://localhost/db_escola", "root", "");
            java.sql.Statement st = conn.createStatement();
            st.executeUpdate("UPDATE aluno SET nome='"
                    +this.jTextPane8.getText() + "',cpf='"
                    +this.jTextPane9.getText()  
                    +"'WHERE id='" + this.jTextPane7.getText()+"'");
            JOptionPane.showMessageDialog(rootPane, "Aluno atualizado");
            
            
            // TODO add your handling code here:
        } catch (SQLException ex) {
            Logger.getLogger(Tela_Inicial.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            // TODO add your handling code here:
            Connection conn = DriverManager.getConnection("jdbc:mysql://localhost/db_escola", "root", "");
            java.sql.Statement st = conn.createStatement();
            
            st.executeUpdate("DELETE FROM aluno WHERE id='" + this.jTextPane10.getText()+"'");
                    
            JOptionPane.showMessageDialog(rootPane, "Aluno excluido");
            
        } catch (SQLException ex) {
            Logger.getLogger(Tela_Inicial.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        Connection conexao = null;
        PreparedStatement statement = null;
       
        String url = "jdbc:mysql://localhost:3306/db_escola";
        String usuario = "root";
        String senha = "";
        
       try {
            conexao = DriverManager.getConnection(url, usuario, senha);
           
            String sql = "INSERT INTO aluno (cpf, nome) VALUES (?, ?)";
           
            statement = conexao.prepareStatement(sql);
           //statement.setString(1, jTextPane1_ID.getText());
           
            
            statement.setString(1, jTextPane1_CPF.getText()); // CPF
            statement.setString(2, jTextPane1_NOME.getText()); // NOME
            //statement.execute();
           // statement.close();
           
            int linhasAfetadas = statement.executeUpdate();
           
            if (linhasAfetadas > 0) {
                
                label_yes.setVisible(true);
                label_no.setVisible(false);
                System.out.println("Dados inseridos com sucesso!");
                this.PopularJTable("SELECT * FROM aluno ORDER BY id DESC");
                
            } else {
                System.out.println("Nenhum dado inserido.");
                label_yes.setVisible(false);
                label_no.setVisible(true);
            }
         } catch (SQLException e) {
            System.out.println("Erro ao inserir dados: " + e.getMessage());
            label_yes.setVisible(false);
                label_no.setVisible(true);
        } finally {
            try {
                if (statement != null) {
                    statement.close();
                }
                if (conexao != null) {
                    conexao.close();
                }
            } catch (SQLException e) {
                System.out.println("Erro ao fechar conexão: " + e.getMessage());
                label_yes.setVisible(false);
                label_no.setVisible(true);
            }}
       
       
    }                                        

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         

//ATUALIZAR
        Connection conexao = null;
        PreparedStatement statement = null;
       
        String url = "jdbc:mysql://localhost:3306/db_escola";
        String usuario = "root";
        String senha = "";
        
       try {
            conexao = DriverManager.getConnection(url, usuario, senha);
           
            //String sql = "INSERT INTO aluno (nome, cpf) VALUES (?, ?)";
           //UPDATE aluno SET nome
           
           String sql = "UPDATE aluno SET nome = ? , cpf = ? where id= ?";
           
            statement = conexao.prepareStatement(sql);
           //statement.setString(1, jTextPane1_ID.getText());
            statement.setString(1, jTextPane8.getText()); // NOME
            statement.setString(2, jTextPane9.getText()); // CPF
            statement.setString(3, jTextPane7.getText()); // ID
            //statement.execute();
           // statement.close();
           
            int linhasAfetadas = statement.executeUpdate();
           
            if (linhasAfetadas > 0) {
                System.out.println("Dados atualizados com sucesso!");
                this.PopularJTable("SELECT * FROM aluno ORDER BY id DESC");
            } else {
                System.out.println("Nenhum dado atualizado.");
            }
         } catch (SQLException e) {
            System.out.println("Erro ao atualizar dados: " + e.getMessage());
        } finally {
            try {
                if (statement != null) {
                    statement.close();
                }
                if (conexao != null) {
                    conexao.close();
                }
            } catch (SQLException e) {
                System.out.println("Erro ao fechar conexão: " + e.getMessage());
            }}
        
    }                                        

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // EXCLUIR
        
        
//ATUALIZAR
        Connection conexao = null;
        PreparedStatement statement = null;
       
        String url = "jdbc:mysql://localhost:3306/db_escola";
        String usuario = "root";
        String senha = "";
        
       try {
            conexao = DriverManager.getConnection(url, usuario, senha);
           
           
           String sql = "DELETE from aluno where id = ?";
           
            statement = conexao.prepareStatement(sql);
           
            statement.setString(1, jTextPane10.getText());
           
           
            int linhasAfetadas = statement.executeUpdate();
           
            if (linhasAfetadas > 0) {
                System.out.println("Dados excluidos com sucesso!");
                this.PopularJTable("SELECT * FROM aluno ORDER BY id DESC");
            } else {
                System.out.println("Nenhum dado excluido.");
            }
         } catch (SQLException e) {
            System.out.println("Erro ao EXCLUIR dados: " + e.getMessage());
        } finally {
            try {
                if (statement != null) {
                    statement.close();
                }
                if (conexao != null) {
                    conexao.close();
                }
            } catch (SQLException e) {
                System.out.println("Erro ao fechar conexão: " + e.getMessage());
            }}
    }                                        

    private void Select(java.awt.event.WindowEvent evt) {                        
        // TODO add your handling code here:
        Connection conexao = null;
        PreparedStatement statement = null;
       
        String url = "jdbc:mysql://localhost:3306/db_escola";
        String usuario = "root";
        String senha = "";
        
      
        try {
            conexao = DriverManager.getConnection(url, usuario, senha);
            label_yes.setVisible(true);
            label_no.setVisible(false);
            this.PopularJTable("SELECT * FROM aluno ORDER BY id DESC");
        } catch (SQLException ex) {
            label_yes.setVisible(false);
            label_no.setVisible(true);
            //Logger.getLogger(Tela_Inicial.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        
    }                       

    private void Clique(java.awt.event.MouseEvent evt) {                        
        // TODO add your handling code here:
        
        int linha = jTable1.getSelectedRow(); // retorna a linha selecionada pelo usuario
        jTextPane7.setText(jTable1.getValueAt(linha,0).toString()); // retorna o valor da celula linha X 0 // ID_S 
        jTextPane8.setText(jTable1.getValueAt(linha,1).toString()); // retorna o valor da celula linha X 1 // nome_S  
        jTextPane9.setText(jTable1.getValueAt(linha,2).toString()); // retorna o valor da celula linha X 2 // CPF_S 
    }                       

